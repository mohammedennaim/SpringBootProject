# ===========================================
# ⚠️ FICHIER .env COMPLET POUR AWS PRODUCTION
# ===========================================
# INSTRUCTIONS: Copier TOUT ce fichier dans .env sur votre serveur AWS
# Commande: cp .env.aws.PRODUCTION .env
# OU créer manuellement avec: nano .env

# ===========================================
# Database Configuration (OBLIGATOIRE)
# ===========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=123456
POSTGRES_DB=digital_logistics
POSTGRES_PORT=5433
DB_PASSWORD=123456

# ===========================================
# PgAdmin Configuration (OPTIONNEL)
# ===========================================
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=123456
PGADMIN_PORT=8081

# ===========================================
# Application Configuration (OBLIGATOIRE)
# ===========================================
SERVER_PORT=8093
APP_HOST_PORT=8093

# ===========================================
# AWS / Production Configuration (OBLIGATOIRE)
# ===========================================
# ⚠️ IMPORTANT: Remplacez 13.60.41.134 par VOTRE IP PUBLIQUE AWS
PUBLIC_HOST=13.60.41.134
KEYCLOAK_PORT=8080

# ===========================================
# Keycloak Configuration (OBLIGATOIRE)
# ===========================================
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# URLs Keycloak pour la production (accessible depuis Internet)
# ⚠️ IMPORTANT: Utiliser votre IP publique AWS, pas localhost
KEYCLOAK_ISSUER_URI=http://13.60.41.134:8080/auth/realms/logistics-realm
KEYCLOAK_JWKS_HOST=keycloak:8080

# Configuration Keycloak pour accepter HTTP (sans HTTPS)
KC_PROXY=edge
KC_HOSTNAME_STRICT_BACKCHANNEL=false

# ===========================================
# Swagger Configuration (OBLIGATOIRE pour éviter CORS)
# ===========================================
# ⚠️ IMPORTANT: Doit correspondre à votre IP publique AWS
SWAGGER_SERVER_URL=http://13.60.41.134:8093

# ===========================================
# Spring Datasource (OBLIGATOIRE)
# ===========================================
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/digital_logistics
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=123456
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=false
SPRING_JPA_DIALECT=org.hibernate.dialect.PostgreSQLDialect

# ===========================================
# ELK Stack Configuration (OPTIONNEL)
# ===========================================
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200
LOGSTASH_HOST=logstash
LOGSTASH_PORT=5000
KIBANA_PORT=5601

# ===========================================
# SonarQube Configuration (OPTIONNEL)
# ===========================================
SONAR_PORT=9001
SONAR_HOST=http://localhost:9001
SONAR_TOKEN=

# ===========================================
# Jenkins Configuration (OPTIONNEL)
# ===========================================
JENKINS_PORT=8089
JENKINS_AGENT_PORT=50000

# ===========================================
# Docker Compose (OBLIGATOIRE)
# ===========================================
COMPOSE_PROJECT_NAME=digitallogistics_prod

# ===========================================
# NOTES IMPORTANTES
# ===========================================
# 1. Les variables marquées (OBLIGATOIRE) sont essentielles
# 2. Remplacez 13.60.41.134 par votre vraie IP AWS partout
# 3. En production, changez les mots de passe par défaut
# 4. Les services (OPTIONNEL) peuvent être désactivés dans docker-compose.yaml
